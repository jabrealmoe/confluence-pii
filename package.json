{
  "title": "Forge Product Trigger",
  "description": "A Forge app that demonstrates how to use product triggers.",
  "name": "product-trigger",
  "version": "2.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "link": true,
  "scripts": {
    "lint": "eslint src/**/* || npm run --silent hook-errors",
    "hook-errors": "echo '\\x1b[31mThe build failed because a Forge UI hook is being used incorrectly. Forge UI hooks follow the same rules as React Hooks but have their own API definitions. See the Forge documentation for details on how to use Forge UI hooks.\\n' && exit 1",
    "build": "cd static/admin && npm ci && npm run build",
    "test": "jest",
    "test:unit": "jest --coverage --testPathPattern='\\.(test|spec)\\.(js|jsx)$'",
    "test:watch": "jest --watch",
    "test:integration": "echo 'No integration tests yet' && exit 0",
    "test:e2e": "echo 'No e2e tests yet' && exit 0",
    "test:perf": "echo 'No perf tests yet' && exit 0",
    "test:smoke": "echo 'No smoke tests yet' && exit 0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "@forge/api": "^6.3.0",
    "@forge/bridge": "^5.10.2",
    "@forge/react": "^11.9.1",
    "@forge/resolver": "^1.7.1"
  }
}
